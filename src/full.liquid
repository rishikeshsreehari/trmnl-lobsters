<div class="layout">
  <div class="columns" data-overflow-max-cols="2">
    <div class="column">
      {% assign max = max_stories | default: 100 %}
      {% assign count = 0 %}
      {% for story in data %}
        {% if count < max %}
          {% assign count = count | plus: 1 %}
          <div class="item">
            <div class="meta"><span class="label label--small">{{ forloop.index }}</span></div>
            <div class="content flex--grow">
              <span class="title title--small" data-clamp="2">
                {{ story.title }}
              </span>
              <div class="flex gap--small flex--wrap">
                <span class="label label--small label--underline">{{ story.score }} points</span>
                <span class="label label--small label--underline">{{ story.comment_count }} comments</span>
                {% for tag in story.tags %}
                  <span class="label label--small label--inverted">
                    {{ tag }}
                  </span>
                {% endfor %}
              </div>
            </div>
            <div class="ml--auto pl--small">
              {{ story.short_id_url | qr_code: 1 }}
            </div>
            
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>
